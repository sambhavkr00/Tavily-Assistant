<mvc:View
    controllerName="curiousai.frontend.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <App id="app">
        <pages>
            <Page title="{i18n>title}">
                <content>
                    <ScrollContainer
                        vertical="true"
                        horizontal="false"
                        height="100%"
                        width="100%"
                    >
                        <FlexBox
                            justifyContent="Center"
                            alignItems="Start"
                            width="100%"
                        >
                            <VBox
                                class="sapUiSmallMargin custom-vbox"
                                width="50%"
                            >
                                <Title
                                    text="{i18n>appTitle}"
                                    class="custom-title"
                                />
                                <Text
                                    text="Responses will be generated by a LLM and may not always be accurate."
                                    class="custom-subtitle"
                                />
                                <FlexBox alignItems="End">
                                    <TextArea
                                        id="promptInput"
                                        placeholder="Ask me anything..."
                                        width="100%"
                                        rows="3"
                                    >
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </TextArea>
                                    <core:Icon
                                        src="sap-icon://paper-plane"
                                        class="sapUiSmallMarginBegin send-icon"
                                        press=".onSendPress"
                                    />
                                </FlexBox>
                                <core:HTML
                                    id="responseText"
                                    class="sapUiSmallMarginTop markdown-content"
                                    content="{/response}"
                                />
                                <FlexBox
                                    id="loadingBox"
                                    visible="false"
                                    alignItems="Center"
                                    class="sapUiSmallMarginTop"
                                >
                                    <core:Icon
                                        src="sap-icon://synchronize"
                                        class="loading-icon"
                                    />
                                    <Text id="loadingStatus" />
                                </FlexBox>
                            </VBox>
                        </FlexBox>
                    </ScrollContainer>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
