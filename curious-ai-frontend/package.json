{
  "name": "curiousai-frontend",
  "version": "1.0.0",
  "description": "SAP Fiori frontend for the CuriousAI",
  "scripts": {
    "start": "ui5 serve -o index.html",
    "dev": "nodemon --exec \"ui5 serve\"",
    "build": "ui5 build --all",
    "build:mta": "ui5 build --all --dest dist",
    "generate:staticfile": "echo 'pushstate: true' > dist/Staticfile",
    "deploy": "npm run build && npm run generate:staticfile && cf push -f manifest.yaml"
  },
  "dependencies": {
    "@openui5/sap.m": "1.138.0",
    "@openui5/sap.ui.core": "1.138.0",
    "@openui5/themelib_sap_fiori_3": "1.138.0",
    "@ui5/cli": "^4.0.22",
    "nodemon": "^3.1.10",
    "ui5-middleware-livereload": "^3.1.2",
    "ui5-middleware-simpleproxy": "^3.4.3",
    "ui5-tooling-modules": "^3.0.0"
  },
  "devDependencies": {},
  "ui5": {
    "dependencies": [
      "ui5-middleware-livereload",
      "ui5-middleware-simpleproxy",
      "ui5-tooling-modules"
    ]
  }
}
